utf8() {
	export LC_ALL=en_US.UTF-8
	export LANG=en_US.UTF-8
	export LANGUAGE=en_US.UTF-8
}

load_alias() {

	for f in /home/sita/script/minecraft/alias/*; do  # or wget-*.sh instead of *.sh
		# . "$f" -H || break # if needed 
		[ ! -f "$f" ] || . "$f" -H
	done
}

#=================================
mcserver() { 
#	echo /home/sita/script/minecraft/$mcver $*
#	/home/sita/script/minecraft/$mcver $*

	if [ -z ${mcver+x} ]; then
		echo mcver not set
	else
		tempsh=/tmp/$mcver
		if [ ! -f $tempsh ]; then
			# echo 'echo /home/sita/script/minecraft/minecraft.server $*' > $tempsh
			echo "#!/bin/bash" > $tempsh
			echo . /home/sita/script/minecraft/minecraft.server '$*' >> $tempsh
			chmod +x $tempsh
		fi
		[ $mcecho_off ] || echo -e "${GREEN}=== $mcver $*${NC}"
		$tempsh $*
	fi
}

mcdo() {
	mcserver do $*
}

filehas() {
	cat $1 | grep -F --quiet "$2"
	return $?
}

mcwaituntilready() {
	mcresult=/tmp/mcwaituntilready
	# echo ================
	mcserver status > $mcresult
	if ! filehas $mcresult 'not running'; then
		# echo 'running'
		for i in $(seq 1 100)       
		do
			mcserver do list > $mcresult
			if filehas $mcresult 'players'; then
				break
			fi
		done
	fi
	# cat $mcresult
	# echo ================
}

pause() {
	read -p "Press any key to continue... " -n1 -s
	echo 
}

chmc() {
	if [ ! -z ${1+x} ]; then
		export mcver=$1
		
		mcpath=/mnt/runtimes/$mcver
		[ ! -d "$mcpath" ] && { echo -e "${YELLOW}$mcpath not installed${NC}"; }
		[   -d "$mcpath" ] && { echo mcver=$mcver; cd $mcpath; }
	fi
}

rematch() {
	mcserver halt
	mcserver pre_restore
	mcserver restore $*
	# mcprep
	server.prep
	mcserver start
	sleep 1
	# mclog
	mcserver log $*
}

bungee_online_mode() {
	echo online_mode: true >>config.yml
}

bungee_offline_mode() {
	echo online_mode: false >>config.yml

}
#=================================
lag_check() {
    echo -e "${GREEN}=== $mcver lag ${NC}"
	logs | grep.lag
	~/start.mc.sh lag
}

#=================================
idlist=~/idlist

group_list() {
    [ -f $idlist ] && rm $idlist
    
    while test ${#} -gt 0
    do
        echo -e "${GREEN}=== $mcver pex group $1 users ${NC}"
        mcserver do pex group $1 users | tail -n +4 | awk 'BEGIN {FS="/"}; {printf("%s\n", $3)}' | sed 's/\[m//g' >>$idlist
        shift
    done
    
    [ -f $idlist ] && cat $idlist
}

op_list() {
    echo -e "${GREEN}=== $mcver op list ${NC}"
    cat /mnt/runtimes/$mcver/ops.json | grep name | awk 'BEGIN {FS="\""}; {printf("%s\n", $4)}' | sed 's/\[m//g' >$idlist
    cat $idlist
}

op_add() {
    [ ! -z "$1" ] && [ -f "$1" ] && idlist=$1
    [ -f $idlist ] && ids=`cat $idlist`
    for id in $ids
    do
        mcserver do op $id
    done
}

op_clear() {
    op_list
    
    [ -f $idlist ] && ids=`cat $idlist`
    for id in $ids
    do
        mcserver do deop $id
    done
}

whitelist_list() {
    [ -f $idlist ] && rm $idlist
    echo -e "${GREEN}=== $mcver whitelist list ${NC}"
    
    # ids=$(mcserver do whitelist list | tail -n +4 | awk '{$1=$2=$3=""; print $0;}' | sed 's/and/ /g' | sed 's/,/ /g')
    # for id in $ids
    # do
        # echo $id >>$idlist
    # done
    
    cat /mnt/runtimes/$mcver/whitelist.json | grep name | awk 'BEGIN {FS="\""}; {printf("%s\n", $4)}' | sed 's/\[m//g' >$idlist
    [ -f $idlist ] && cat $idlist
}

whitelist_add() {
    [ -f $idlist ] && ids=`cat $idlist`
    for id in $ids
    do
        mcserver do whitelist add $id
    done
}

whitelist_clear() {
    [ -f $idlist ] && ids=`cat $idlist`
    for id in $ids
    do
        mcserver do whitelist remove $id
    done
}

